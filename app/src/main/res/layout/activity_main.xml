<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simulador de creditos" />

    <TextView
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Simulador de CrÃ©dito"
        android:gravity="center"
        android:background="#2196F3"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Nombre"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            />
        <EditText
            android:id="@+id/etnombre"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Ingrese nombre"
            android:drawableStart="@drawable/ic_baseline_person_24"
            />
        <TextView
            android:text="Fecha"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            />
        <EditText
            android:id="@+id/etfecha"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:hint="Ingrese fecha"
            />
    </LinearLayout>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Monto"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            />
        <EditText
            android:id="@+id/etmonto"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Ingrese Monto"
            />
        <TextView
            android:text="Tipo"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            />
        <Spinner
            android:id="@+id/sptipo"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Numero de cuotas"
            android:layout_width="180dp"
            android:layout_height="wrap_content" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <RadioButton
            android:id="@+id/rb12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12" />

        <RadioButton
            android:id="@+id/rb24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="24" />
        <RadioButton
            android:id="@+id/rb36"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="36"/>
    </RadioGroup>
    <Switch
        android:id="@+id/swcuotamanejo"
        android:layout_width="match_parent"
        android:text="Incluye cuota de manejo"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:text="Valor cuota"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        />
        <TextView
            android:id="@+id/tvalorcuota"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            />
        <TextView
            android:text="Total deuda"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/tvdeuda"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <ImageButton
            android:id="@+id/btncalc"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_calculate_24"/>
        <ImageButton
            android:id="@+id/btnclear"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_cleaning_services_24"/>

    </LinearLayout>

</LinearLayout>